<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <CheckBox
        android:id="@+id/checkBoxSushi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sushi"/>

    <CheckBox
        android:id="@+id/checkBoxPizza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pizza"/>

    <CheckBox
        android:id="@+id/checkBoxHamburguesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hamburguesa"/>

    <RadioGroup
        android:id="@+id/radioGroupSalsas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/radioButtonKetchup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ketchup"/>

        <RadioButton
            android:id="@+id/radioButtonMayonesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mayonesa"/>
    </RadioGroup>

    <TextView
        android:id="@+id/textViewResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Resultado: "
        android:textSize="18sp"/>
</LinearLayout>
